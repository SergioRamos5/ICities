<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentBio">


    <ImageView
        android:id="@+id/imageBio"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="50dp"
        android:src="@drawable/ciudad"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageBio"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/nameUserBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carlos"
            android:layout_toEndOf="@id/name"
            android:textSize="20dp"/>


        <TextView
            android:id="@+id/surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surname: "
            android:textSize="20dp"
            android:layout_below="@id/nameUserBio"/>

        <TextView
            android:id="@+id/surnameUserBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clement Bellido"
            android:layout_toEndOf="@id/surname"
            android:layout_below="@id/nameUserBio"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telephone: "
            android:textSize="20dp"
            android:layout_below="@id/surname"/>

        <TextView
            android:id="@+id/telephoneUserBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="678123756"
            android:layout_toEndOf="@id/telephone"
            android:layout_below="@id/surname"
            android:textSize="20dp"/>

    </RelativeLayout>

</RelativeLayout>